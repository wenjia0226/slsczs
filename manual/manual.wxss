/* manual/manual.wxss */
.mainWrap {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 0 5%;
}
.label {
  font-size: 30rpx;
  margin: 25rpx 0;
  font-weight: bold;   
}
.nameInnerWrap{
  background: #f7f8fa;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  letter-spacing:  4rpx;
}
/* 性别 */
.sexWrapper {
  display: flex;
  justify-content: space-between;
  
}
.sexBox {
  display: flex;
  height: 40rpx;
  padding: 10rpx 0;
  width: 48%;
  background: #f7f8fa;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.sexBox image {
  width: 30rpx;
  height: 30rpx;
  padding: 0 10rpx;
}
.selectedActive {
  background: #3e65e4;
  color: #fff;
}
.picker {
  background: #f7f8fa;
  text-align:center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
.btnWrap {
  margin: 100rpx 0;
  display: flex;
  justify-content: center;
}
.addBtn {
  background: #3e65e4;
  padding: 10rpx 150rpx;
  color: #fff;
  border-radius: 30rpx;
  font-size: 30rpx;
}
.placeH {
  font-size: 24rpx;
  color: grey;
}

/* 提示跳转 */

.greyBg {
  position: fixed;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 10;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
.showRemin {
  position: fixed;
  top: 40%;
  left: 10%;
  width: 80%;
  box-sizing: border-box;
  background-color: white;
  z-index: 12;
  overflow: auto;
  margin: auto;
  color: #000;
  border-radius: 10rpx;
}
.quxiaoRemin{
  text-align: right;
  height: 40rpx;
  margin: 20rpx;
}
.quxiaoRemin> image {
  width: 30rpx;
  height: 30rpx;
}
.txt{
