/* manual/manual.wxss */
.mainWrap {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 0 5%;
}
.label {
  font-size: 30rpx;
  margin: 25rpx 0;
  font-weight: bold;   
}
.nameInnerWrap{
  background: #f7f8fa;
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  letter-spacing:  4rpx;
}
/* 性别 */
.sexWrapper {
  display: flex;
  justify-content: space-between;
  
}
.sexBox {
  display: flex;
  height: 40rpx;
  padding: 10rpx 0;
  width: 48%;
  background: #f7f8fa;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.sexBox image {
  width: 30rpx;
  height: 30rpx;
  padding: 0 10rpx;
}
.selectedActive {
  background: #3e65e4;
  color: #fff;
}
.picker {
  background: #f7f8fa;
  text-align:center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
.btnWrap {
  margin: 100rpx 0;
  display: flex;
  justify-content: center;
}
.addBtn {
  background: #3e65e4;
  padding: 10rpx 150rpx;
  color: #fff;
  border-radius: 30rpx;
  font-size: 30rpx;
}
