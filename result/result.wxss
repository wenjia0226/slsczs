/* pages/save/save.wxss */
/* 中间圆圈 */
.titlebar {
  background: #5853F0;
}
.mask {
  position:absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9;
  background: #000;
  opacity: 0.5;
}
.bg2 {
  display: block;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
 
.show {
  display: block;
  text-align: center;
  position: absolute;
  top: 20%;
  left: 10%;
  width: 80%;
  height: 60%;
  padding: 8rpx;
  box-sizing: border-box;
  background-color: white;
  z-index: 1002;
  overflow: auto;
  margin: auto;
  background-image: url('https://www.guangliangkongjian.com/images/bg_pop.png');
  background-position: center;
  background-repeat: no-repeat;
}
.innerBg {
  position: absolute;
  top: 20%;
  left: 10%;
  width: 80%;
  height: 60%;
}
.congratulaition {
  height: 200rpx;
  text-align: center;
}
.congratulaition > image {
  height: 180rpx;
  width: 90%;
  margin: 20rpx 0;
}
.titleWrap {
  font-size: 40rpx;
  color: #fff;
}
.flowerWrap {
  height: 400rpx;
  position: relative;
}

.flower,.eye {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: 99;
  height:400rpx;
}
.eye {
 z-index: 100;
  height: 300rpx;
}
.number {
  color: #FFDC02;
  font-size: 46rpx;
   font-weight: bold;
}
.buttonWrap {
  display: flex;
  justify-content: space-around
}
.iknow, .see {
  width: 200rpx;
  padding: 10rpx ;
  font-size: 36rpx;
  font-weight: bold;
  color: #A85326;
  background: #FFDC02;
  border-radius: 50rpx;
}
.see {
  color: #FF9B00;
}
.bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -999;
  display: block;
  width: 100%;
  height: 380rpx;
}
.topWrap {
  background: #5853F0;
  text-align: center;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 999;
}
.main {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
}
.total {
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
  font-size: 60rpx;
  font-weight: bold;
  letter-spacing: 20rpx;
  height: 260rpx;
  line-height: 260rpx;
}
/* //中间圆圈 */
.centerWrap{
  padding: 30rpx;
  display: flex;
}
.leftWrap {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  border:15rpx solid #BFCEFE;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 0rpx  10rpx 10rpx #EFF3FF;
  margin: 30rpx;
}
.title {
  color: #999;
}
.bigNum {
  font-size: 46rpx;
  color: #4db2fd;
  margin: 20rpx;
  font-weight: bold;
}
.smallNum {
  font-size: 20rpx;
  color: #999;
}
.warning {
  margin: 5rpx 5%;
  font-size: 28rpx;
  line-height: 50rpx;
}
.end{
  margin: 20rpx auto;
  width: 64%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 3rpx;
}