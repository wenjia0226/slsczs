.main {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background: #F4F4F4;
}
/* 轮播图 */
.swiperWrap {
  height:calc(100vw);
  position: relative;
}
.swiperInner {
  height: 100%;
}
.swiperItem >image {
  width: 100%;
  height: 100%;
}
.imageCount {
  width: 80rpx;
  height: 60rpx;
  border-radius: 50%;
  line-height: 58rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  right: 26rpx;
  bottom: 20rpx;
  background:rgba(95, 93, 93, 0.6);
}
/* 详情 */
.detailWrap {
  padding: 20rpx 20rpx 20rpx 40rpx;
  background: #fff;
  margin: 10rpx 0;
}
.txt {
  font-size: 26rpx;
}
.bi {
 background: #fff;
  height: 40rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0;

}
.bi image {
  width: 30rpx;
  height: 30rpx;
}
.bi> text {
  padding: 0 20rpx;
  font-size: 36rpx;
  color: red;
}
/* 规格选择 */
.price {
  height: 50rpx;
  line-height: 50rpx;
  color: red;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
}
.quxiaoBtn {
  width: 30rpx;
  height: 30rpx;
}
.quxiaoBtn > image {
  width: 100%;
  height: 100%;
}
.sizeName {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}

.sizeWrap {
  font-size: 20rpx;
  padding: 20rpx 20rpx 20rpx 40rpx;
  background: #fff;
}
.sizeCon {
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  padding:30rpx 0;
}
/* 型号 */
.GuigeName {
  background: #eee;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  margin: 10rpx;
  font-size: 24rpx;
}
.selectedActive {
  background: #0073E9;
  color: #fff;
}
/* 加减号 */
.numWrap {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.btnWrap {
  display: flex;
  justify-content: center;
  align-items: center;
}
.addBtn {
  width: 50rpx;
  height:50rpx;
  text-align: center;
  line-height: 50rpx;
  background: #eee;
}
.numTitle {
  font-size: 26rpx;
}
.num {
  height: 40rpx;
  text-align: center;
  width: 40rpx;
  padding: 0 20rpx;
}
.disableReduce {
  background: #f8f8f8;
  color: #e0e0e0;
}
.confimBtn {
  background: #fff;
  text-align: center;
  color: #fff;
  padding: 20rpx 0;
  font-weight: bold;
  margin: 0 auto;
  width: 100%;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
