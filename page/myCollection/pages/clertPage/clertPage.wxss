.mainWrap {
  background: #f7f8fa;
  /* position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0; */
  display: flex;
  flex-direction: column;
}

.number {
 
  color: red;
  display: inline-block;
  font-weight: bold;
  font-size: 30rpx;
  padding: 0 10rpx;
}
.coWhite {
  color: #fff;
}
.imgWrap {
  display: inline-block;
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
}
.imgWrap > image {
  width: 100%;
  height: 100%;
}
.centerWrap {
  flex: 1;
  overflow: hidden;
}
.itemWrap {
  position: relative;
 margin: 20rpx 5%;
 border-radius: 10rpx;
}
.item {
  padding:  16rpx 10rpx 16rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 26rpx;
  display: flex;
}
.size {
  width: 200rpx;
  padding-left: 20rpx;
  display: inline-block;
}
.name {
  flex:1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bottomWrap {
  height: 120rpx;
}
.scanWrap {
  position: fixed;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
}
.scanBox {
  width: 60%;
  background: #1ea8ff;
  padding: 16rpx;
  box-sizing: border-box;
  border-radius:  36rpx;
  text-align: center;
  color: #fff;
}
.bggrey {
  color: grey;
  font-size: 24rpx;
}