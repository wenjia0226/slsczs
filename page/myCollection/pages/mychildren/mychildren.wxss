/* pages/user/user.wxss */
.main {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
/* 修改 */
.cancel {
  background: #f7f8f8;
  padding: 10rpx 30rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}
.modifyWrap {
   margin: 10rpx 5%;
  display: flex;
  justify-content: flex-end;
}
.editWrap {
  margin: 10rpx 5%;
  display: flex;
  justify-content: space-between;
}
.modify, .finish{
  padding: 10rpx 30rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  background:#6682e8; 
  color: #fff;
}
.touxiangWrap {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.touxiang {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background:#fff;
   display: flex;
  justify-content: center;
  align-items: center;
}
.touxiang image {
  width: 100%;
  height: 100%;
}
.centerWrap {
  box-sizing: border-box;
  padding: 0 5%;

}
.common {
  padding: 20rpx;
  border-bottom: 2rpx dotted #333;
  font-size: 28rpx;
}
.sex {
  display: flex;
}
/* 新添加 */
.itemWrap {
  display: flex;
  margin: 40rpx 0;
}
.name {
  font-size: 30rpx;
  margin: 0 20rpx;
  font-weight: bold;
}
.inputInner {
  flex: 1;
  height: 40rpx;
  line-height: 40rpx;
  background: #f7f8f8;
  font-size: 24rpx;
  padding: 5rpx 25rpx;
  word-spacing: 4rpx;
}
.activeInput{
  border:1px solid #6682e8;
  background: #fff;
}
/* 性别 */
.sexWrapper {
  display: flex;
  justify-content: space-between;
  flex: 1;
  
}
.sexBox {
  display: flex;
  height: 40rpx;
  padding: 10rpx 0;
  width: 48%;
  background: #f7f8fa;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.sexBox image {
  width: 30rpx;
  height: 30rpx;
  padding: 0 10rpx;
}
.selectedActive {
  background: #6682e8;
  color: #fff;
}

/* // 修改出生日期 */
.section{
  flex: 1;
  background: #f7f8fa;
}
.remindDate {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}