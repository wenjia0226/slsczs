<!--reportList/reportList.wxml-->
<view class="main">
  <view class="title">视觉检测报告单</view>
  <!-- 顶部头像 -->
  <view class="itemWrap">
    <view class="leftWrap">
    <view class="logo">
      <image src="/image/girl.png" mode="aspectFit" wx:if="{{gender == '女'}}"></image>
      <image src="/image/boy.png" mode="aspectFit" wx:if="{{gender == '男'}}"></image>
    </view>
    </view>
    <view class="centerWrap">
      <view class="name">{{name}}</view>
      <view class="time">{{birthday}}</view>
    </view>
    <view class="rightWrap">
      <view>学校: {{school}}</view>
      <view>电话: {{phone}}</view>
    </view>
  </view>
  <view class="reportMian"  style="height: 100%">
    <scroll-view scroll-y style="height: 100%">

    <!-- 屈光度 -->
    <view class="listWTitle">屈光度</view>
    <view  class="list">
      <view class="wth">眼别</view>
      <view class="wth">远裸视</view>
      <view class="wth">近裸视</view>
      <view class="wth">球镜</view>
      <view class="wth">柱镜</view>
      <view class="wth">轴位</view>
      <view class="wth">矫正视力</view>
      <view class="wth">瞳距</view>
      <view class="wth">主导眼</view>
    </view>
    <view  class=" list listLeft" style="border-bottom: 1px dotted  #6794EB">
      <view class="wth">左眼</view>
      <view class="wth"> {{farLeft}}</view>
      <view class="wth">{{nearLeft}}</view>
      <view class="wth">{{sphLeft}}</view>
      <view class="wth">{{axisLeft}}</view>
      <view class="wth">{{correctLeft}}</view>
      <view class="wth">{{ipdLeft}}</view>
      <view class="wth">{{leadingLeft}}</view>
    </view>
    <view  class="list listLeft">
      <view class="wth">右眼</view>
      <view class="wth">{{farRight}}</view>
      <view class="wth">{{nearRight}}</view>
      <view class="wth">{{sphRight}}</view>
      <view class="wth">{{axisRight}}</view>
      <view class="wth">{{correctRight}}</view>
      <view class="wth">{{ipdRight}}</view>
      <view class="wth">{{leadingRight}}</view>
    </view>
    <!-- 视功能检查 -->
    <view class="listWTitle">视功能检查</view>
    <view class="itemLine">
      <view class="itemLeft">眼球运动:{{motion}}</view>
      <view class="itemLeft">立体视检查:{{stereopsis}}</view>
    </view>
     <view class="itemLine">
      <view class="itemLeft">遮盖眼位:{{cover}}</view>
      <view class="itemLeft">Worth-4点:{{worth}}</view>
    </view>
     <view class="collectionWrap">
      <view class="collectLeft">
        <view>集合近点 :{{assembly}}</view>
        <view>色觉检查 :{{colourVision}}</view>
      </view>
      <view class="collectRight">
        <view class="collectRightTitle bd_bottom">调 节 灵 敏 度</view>
         <view class="eyeWrap">
            <view>{{splRight}}</view>
            <view>{{splLeft}}</view>
            <view>{{splBinoculus}}</view>
         </view>
      </view>
    </view>
     <!-- <view class="itemLine">
      <view class="itemLeft">色觉检查</view>
      <view class="itemLeft">Worth-4点</view>
    </view> -->
    <view>
    </view>
    <!-- 生物测量检查 -->
    <view class="listWTitle">生物测量检查</view>
    <view  class="list">
      <view>眼别</view>
      <view>水平曲率值</view>
      <view>垂直曲率值</view>
      <view>眼轴长度</view>
      <view>前房深度</view>
      <view>晶体厚度</view>
    </view>
    <view  class=" list listLeft" style="border-bottom: 1px dotted  #6794EB">
       <view>右眼</view>
      <view>{{levelRight}}</view>
      <view>{{verticalRight}}</view>
      <view>{{axialLengthRight}}</view>
      <view>{{acdRight}}</view>
      <view>{{ltRight}}</view>
    </view>
    <view  class="list listLeft">
      <view>左眼</view>
      <view>{{levelLeft}}</view>
      <view>{{verticalLeft}}</view>
      <view>{{axialLengthLeft}}</view>
      <view>{{acdLeft}}</view>
      <view>{{ltLeft}}</view>
    </view>
    <!-- 眼部健康检查 -->
      <view class="listWTitle">眼部健康检查</view>
      <view  class="list listLeft"  style="border-bottom: 1px dotted  #6794EB">
        <view>裂隙灯检查 :{{slitLamp}}</view>
        <view></view>
      </view>
      <view  class="list listLeft">
        <view>眼底照相检查:{{retCam}}</view>
        <view></view>
      </view>
    <!-- 身体情况 -->
      <view class="listWTitle">身体情况</view>
      <view  class="list listLeft"  style="border-bottom: 1px dotted  #6794EB">
        <view>身高（cm）</view>
        <view>{{height}}</view>
      </view>
      <view  class="list listLeft">
        <view>体重（kg）</view>
        <view>{{weight}}</view>
      </view>
      <!-- 处理建议 -->
      <view class="listWTitle">处理建议</view>
      <view  class="list listLeft"  style="height: 100rpx;">
        <view>{{suggest}}</view>
      </view>
   </scroll-view>
  </view> 
</view>
