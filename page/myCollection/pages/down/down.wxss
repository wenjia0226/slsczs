.itemWraper {
  display: flex;
  background: #fff;
  margin: 20rpx 0;
  padding: 15rpx;
}
.leftArea {
  display: flex;
  align-items: flex-start;
  padding-left: 15rpx;
}
.leftArea image {
  width: 50rpx;
  height: 50rpx;
}
.centerArea {
  width: 130rpx;
  margin: 0 20rpx;
}
.centerArea image {
  width: 100%;
  height: 130rpx;
}
.rightArea {
  display: flex;
  justify-content: center;
  align-items: center;
}
.downArea {
  width: 50rpx;
  margin: 0 20rpx;
}
.downArea image {
  width: 50rpx;
  height: 50rpx;
}
.name {
  font-size: 34rpx;
  font-weight: 600;
  width: 140rpx;
}
.lastTimeSight {
  display: flex;
  border-bottom: 1rpx dotted #000;
  margin: 10rpx 0;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}
.lastTimeSight:nth-of-type(2n + 1) {
  border:none;
}
.title {
  font-size: 24rpx;
  text-align: center;
}
.lastTimeSight image{
  width: 30rpx;
  height: 30rpx;
  margin-right:  10rpx;
}
.lastTimeSight image:nth-of-type(2n) {
  margin-left: 10rpx;
}

/* 下面提框 */
.alertWrap {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
 
  background: #fff;
}
.leftAlert {
  flex: 1;
  padding: 30rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}
.leftAlert image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.rightAlert{
  flex:1;
  padding: 30rpx;
  background: #5391FC;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
  opacity: 0.6
}
.rightAlert image {
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx;
}
.opacityNum {
  opacity: 1;
}
