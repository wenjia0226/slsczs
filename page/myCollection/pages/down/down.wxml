<view class="mainWrapper">
<scroll-view scroll-y height="100%">
  <view class="itemWraper" wx:for="{{childrenList}}">
    <view class="leftArea" data-id="{{item.id}}"  wx:if="{{display}}">
        <image  bindtap='sty_background' class='checkbox_v' src="{{checkbox[index]}}" data-index="{{index}}"></image>
      </view>
    <view class="centerArea">
      <image src="/image/girl.png" mode="aspectFit" wx:if="{{item.gender == 1}}"></image>
      <image src="/image/boy.png" mode="aspectFit"  wx:if="{{item.gender == 0}}"></image>
    </view>
    <view class="rightArea">
      <view class="name">{{item.name}}</view>
      <view class="downArea"><image src="/image/down.png"></image></view>
      <view class="sightArea">
        <view class="title">裸眼视力</view>
        <view class="lastTimeSight" >
          <image src="/image/right.png"></image>
          <view>{{item.old.visionRight}}</view>
          <image src="/image/left.png"></image>
          <view>{{item.old.visionLeft}}</view>
        </view>
        <view class="lastTimeSight" >
          <image src="/image/right.png"></image>
          <view>{{item.new.visionRight}}</view>
          <image src="/image/left.png"></image>
          <view>{{item.new.visionLeft}}</view>
        </view>
      </view>
    </view>
  </view>
   <view style="height: 200rpx;background: #eee;text-align: center; font-size: 26rpx;" > </view>
  </scroll-view>
  <view class="alertWrap">
    <view class="leftAlert"  wx:if="{{display}}"  >  
		<image bindtap='all_choice' src='{{checkboxall}}'></image>
      <view>全选</view>
    </view>
    <view class="rightAlert" bindtap="alertStudent">
      <image src="/image/clock.png"></image>
      <view>提醒</view>
    </view>
  </view>
</view>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              