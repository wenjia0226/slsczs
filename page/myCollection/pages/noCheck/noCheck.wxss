.itemWraper {
  display: flex;
  background: #fff;
  margin: 20rpx 0;
  padding: 15rpx;
}
.leftArea {
  display: flex;
  align-items: flex-start;
  padding-left: 15rpx;
}
.leftArea image {
  width: 50rpx;
  height: 50rpx;
}
.centerArea {
  width: 160rpx;
  margin: 0 20rpx;
}
.centerArea image {
  width: 160rpx;
  height: 160rpx;
}
.rightArea {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.name {
  font-size: 36rpx;
  font-weight: 600;
}
.time {
  font-size: 24rpx;
  padding: 5rpx;
}
.rem{
  color: red;
  font-weight: bold;
  font-size: 24rpx
}

/* 下面提框 */
.alertWrap {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right:0;
 
  background: #fff;
}
.leftAlert {
  flex: 1;
  padding: 30rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}
.leftAlert image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.rightAlert{
  flex:1;
  padding: 30rpx;
  background: #5391FC;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
  opacity: 0.6
}
.rightAlert image {
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx;
}
.bg {
  background: red;
  border-radius: 50%;
}
.opacityNum {
  opacity: 1;
}