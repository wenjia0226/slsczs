/* pages/corparation/corparation.wxss */
.main {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #eee;
}
.itemWrap {
  height: 20%;
  background: #fff;
  margin: 3%;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
}
.left {
  width: 28%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  box-sizing: border-box;
}
.left image {
  width: 200rpx;
  height: 200rpx;
}
.right {
  margin-left:20rpx;
  font-size:30rpx;
 
}
.name {
  width: 400rpx;
  text-align: center;
  padding: 10rpx;
  color: #666;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.address {
  width: 420rpx;
  color: #666;
  padding: 10rpx 0;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;

}