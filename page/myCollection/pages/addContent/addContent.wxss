/* page/myCollection//pages/addContent/addContent.wxss */
.mainWrap {
  margin: 30rpx 2%;
}
.inputWrap {
  font-size: 26rpx;
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.imgWrap {
  margin: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.itemImg , .imgBox{
  width: 48%;
  height: calc(48vw);
  background: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 1%;
  margin-bottom: 1%;
}
.itemImg  > image {
  width: 50rpx;
  height: 50rpx;
}
.imgBox {
  background: #fff;
}
.imgBox > image {
  height: 100%;
  width: 100%;
}

/* 发布 */
.publish {
  width: 80%;
  margin: 20rpx auto;
  background: #00c032;
  border-radius: 36rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  padding: 16rpx;
  box-sizing: border-box;
}