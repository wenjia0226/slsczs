/* //底部时间 点赞 */
.itemBttom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 16rpx 0;
}
.time {
  font-size: 24rpx;
  color: #d9d9d9;
}
.zanWrap {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
}
.zanWrap image {
  width: 40rpx;
  height: 40rpx;
}
.num {
  padding: 0 10rpx;
}
.noData {
  margin: 10rpx 5%;
  padding: 10rpx;
  text-align: center;
  font-size: 26rpx;
  border-bottom: none;
}