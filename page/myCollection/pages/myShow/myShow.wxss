/* page/eyeShow/eyeShow.wxss */
.mainWrap {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

/* 头部 图片头像 */
.imgWrap {
  width: 100%;
  height: calc(50vw);
  position: relative;
  margin-bottom: 40rpx;
}
.imgWrap image {
  width: 100%;
  height: 100%;
}
.infoWrap {
  display: flex;
  align-items: center;
}
.name {
  position: absolute;
  right: 220rpx;
  bottom: 10rpx;
  letter-spacing: 5rpx;
  color: #fff;
}
.infoWrap > image {
 position: absolute;
  bottom: -50rpx;
  right: 50rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
/* 内容 */
.centerWrap {
  margin: 10rpx 3%;
  box-sizing: border-box;
}
.centerItem {
  display: flex;
  align-items: center;
}
.leftPart {
  width: 150rpx
}
.leftPart image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.rightPart {
  flex: 1;
  color: #185396
}
.deleteImg {
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
}
.deleteImg image {
  width: 100%;
  height: 100%;
}
.centerContent {
 display: flex;
 font-size: 26rpx;
}
.leftConPart {
   width: 150rpx
}
.rightConPart{
  flex: 1
}
.word {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}
.imgBox {
  overflow: hidden;
}
.imgBox > image {
  width: 45%;
   height: calc(34vw);
  margin: 1%;
}
.zanList {
  background: #eee;
  padding: 10rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.zanList > image {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;

}
.zanBox {
  font-size: 24rpx;
  line-height:30rpx;
  padding: 0 10rpx  0 40rpx;
  color: #185396;
