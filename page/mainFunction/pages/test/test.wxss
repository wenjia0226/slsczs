/* pages/test/test.wxss */
.testwrap{
  position: absolute;
  left: 0;
  right: 0;
  top: 200rpx;
  bottom: 0;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.imgWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 600rpx;
}
.num {
  font-size: 50rpx;
  margin: 10rpx 40rpx;
  letter-spacing: 8rpx;
  color: #3e65e4;
  font-weight: bold;
}
.total{
  display: flex;
  color: #999;
}
.total > view {
   padding: 0 10rpx;
}
.end{
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4db2fd;
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 100rpx;
  position: fixed;
  bottom: 0rpx;
}
.panduan {
  height: 200rpx;
  width: 100%;
  margin: 20rpx 20rpx 40rpx;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 200rpx;
}
.right {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.right > image {
  width: 150rpx;
}
 /* 滑动 */
 .wraningCxt{
   font-size: 24rpx;
   color: red;
 }
.chooseLevel {
  display: inline-block;
  border-top: 1rpx solid grey;
  border-bottom: 1rpx solid grey;
  
}
.chooseItem {
  padding: 30rpx 36rpx;
  border-right: 1rpx solid grey;
  text-align: center;
  width: 125rpx;
  box-sizing: border-box;

}
.leve5 {
  font-size: 24rpx;
  margin: 10rpx 0;
}
.levelNum {
  font-size: 24rpx;
}
.selLevel {
  background: #4db2fd;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.wraningCxt {
  text-align: center;
}
