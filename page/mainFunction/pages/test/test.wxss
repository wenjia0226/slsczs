/* pages/test/test.wxss */
.testwrap{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.imgWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 600rpx;
}
.num {
  font-size: 50rpx;
  margin: 40rpx;
  letter-spacing: 8rpx;
  color: #3e65e4;
  font-weight: bold;
}
.total{
  display: flex;
  color: #999;
}
.total > view {
   padding: 0 10rpx;
}
.end{
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4db2fd;
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 100rpx;
  position: fixed;
  bottom: 0rpx;
}
.panduan {
  height: 200rpx;
  width: 100%;
  margin: 20rpx 20rpx 40rpx;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 200rpx;
}
.right {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.right > image {
  width: 150rpx;
}
