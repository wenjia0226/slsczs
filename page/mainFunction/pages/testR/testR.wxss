/* pages/testR/testR.wxss *//* pages/test/test.wxss */
.testwrap{
  position: absolute;
  left: 0;
  right: 0;
  top: 200rpx;
  bottom: 0;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.imgWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex:1;
}
.num {
  font-size: 50rpx;
  margin: 10rpx 40rpx;
  letter-spacing: 8rpx;
  color: #3e65e4;
  font-weight: bold;
}
.total{
  display: flex;
  color: #999;
}
.total > view {
   padding: 0 10rpx;
}
.end{
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4db2fd;
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 100rpx;
  position: fixed;
  bottom: 0rpx;
  
}
.panduan {
  height: 200rpx;
  width: 100%;
  margin: 10rpx 20rpx 10rpx;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 200rpx;
}
.right {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.right > image {
  width: 150rpx;
}
 /* 滑动 */
 .scrollBox {
  width: 80%;
  margin-left: 10%;
  box-shadow:inset 0px 0px 15rpx 5rpx #999;
  border-radius: 50rpx;
  padding: 0 50rpx;
}
 .wraningCxt{
   font-size: 24rpx;
   color: #666;
 }
.chooseLevel {
  display: inline-block;
  padding: 10rpx 0;
}
.chooseItem {
  padding: 0rpx 30rpx;
  text-align: center;
  border-right: 1rpx solid grey;
}
.leve5 {
  font-size: 30rpx;
  margin: 10rpx 0;
  font-weight: bold;
}
.levelNum {
  font-size: 24rpx;
}
.selLevel {
  background: #4db2fd;
  color: #fff;
  transform: font-size scale(2);
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.wraningCxt {
  text-align: center;
}