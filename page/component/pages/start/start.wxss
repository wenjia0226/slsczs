/* pages/start/start.wxss */
.main{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 0 4%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text{
  display: flex;
  font-size: 50rpx;
  font-weight: bold;
  margin: 30rpx  0 15rpx;
  letter-spacing:6rpx;
}
.right {
  color: #3e65e4;
}
.imgWrap{
  width: 100%;
  height: 500rpx;
  text-align: center;
  margin: 50rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.imgWrap >image {
  height: 400rpx;
}
.describe{
   display: flex;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 30rpx;
}
.zhegai {
  color: #3e65e4;
}
.detail{
  font-size: 28rpx;
  margin: 20rpx  0 150rpx; 
}
