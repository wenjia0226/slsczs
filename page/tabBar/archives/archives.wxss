/* archives.wxss */
.main {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #eee;
  display: flex;
  flex-direction: column;
}
/* //头部轮播 */
.headerWrapper{
  height: 18vh;
  margin: 20rpx  3%;
  text-align: center;
}
.nodangan {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  margin: 20rpx  3%;
}
.nochild {
  background: #fff;
  line-height: 18vh;
}
.headeritem {
  height: 100%;
  background: #4db2fd;
  border-radius: 5rpx;
}
.swiperwrap{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: #BDCEFA;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  
}
.logo {
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 40rpx 0 20rpx;
}
.logo_img{
  width: 140rpx;
}
.text {
  font-size: 28rpx;
  text-align: left;
  flex: 1;
}
.liebiao {
  white-space: nowrap;
  padding: 30rpx 0;
  margin: 0 5%;
  text-align: center;
}
.title {
  display: inline-block;
  font-size: 26rpx;
  padding: 0 20rpx 20rpx;
}
.active {
  border-bottom: 5rpx double #000;
}
/* //列表项 */
.list {
  margin: 20rpx 0;
  border-radius: 20rpx;
  
}
.items {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 30rpx;
  background: #fff;
  margin: 0 5% 20rpx;
  border-radius:  15rpx;
 
}
.item {
  width: 33%;
  text-align: center;
  padding: 10rpx 0;
}
.item-top{
  height: 50rpx;
  width: 100%;
  
}
.item-top > image {
  height: 40rpx;
  width: 100%;
}

.mainCon {
  width: 100%;
  flex: 1;
}
.containter {
  height: 100%;
  margin: 0 5%;
  background: #fff;
}
ec-canvas {
  width: 60%;
  height: 100%;
}