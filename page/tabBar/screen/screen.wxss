.main {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  display: flex;
  flex-direction: column;
}
.bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -999;
  display: block;
  width: 100%;
}
swiper {
  height: 400rpx !important;
}
 .topwap {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center; 
    flex-direction: column;
    position: relative;
    height: 580rpx;
  }
  .portrait {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    background: #fff;
    border: 10rpx solid #575FF3;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .smaller {
    width: 130rpx;
  }
  .portrait > image{
    height: 140rpx;
  }
  .name{
    padding: 20rpx 0;
    color: #fff;
  }
/* 轮播 */
.u-wrp-bnr {
  width: 100%;
  display: block;
  position: relative;
}
.swiperItem {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.addChild {
   height: 300rpx ;
  width: 220rpx !important;
   display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.u-img-slide {
  width: 100%;
  height: inherit;
}
.active {
  transform:  scale(1.1);
  /* transform: translate(100%, 0px) translateZ(0px); */
  transition: all 0.2s ease-in 0s;
  z-index: 20;
  margin-top: 20rpx;
}
.time {
  text-align: center;
  font-size: 24rpx;
  color: #eee;
  width: 100%;
  padding: 5rpx;
}
.lastTime {
  position: relative;
  bottom: -150rpx;
  z-index: 999;
  color: red;
}
