/* my.wxss */
.main {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #eee;
}
.headerWrap{
  height: 200rpx;
  margin-bottom: 120rpx;
  background: -webkit-linear-gradient(bottom,
    #4db2fd, #5F1BE8);
  position: relative;
}
.inner {
  position: absolute;
  top: 100rpx;
  width: 90%;
  margin: 0 0 0 5%;
  height: 200rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0 ;
  display: flex;
}
.leftIcon {
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo-avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.centerNi{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.rightQian{
   width: 200rpx;
   height: 100%;
   display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.rightQian image {
  width: 100rpx;
  height: 100rpx;
}
.qiandao {
  font-size: 28rpx;
}
.listWrap {
  margin: 10rpx 0;

}
.login{
  font-size: 36rpx;
  font-weight: bold;
}
/* 底部 */
.item {
  height: 100rpx;
  padding: 20rpx;
  color: #333;
  display: flex;
  margin: 0 5%;
  border-bottom: 3rpx dashed #eee;
  background: #fff;
  box-sizing: border-box;
}

.title {
  width: 50%;
  height: 100%;
  padding-left: 20rpx;
}
.mychild {
   width: 90%;
  height: 100%;
  padding-left: 20rpx;
}
.titleCenter {
  width: 40%;
  height: 100rpx;
  text-align: right
}
.titleRight{
 flex: 1;
 padding: 0 10rpx;

}
.titleRight > image {
  height: 40rpx;
  width: 40rpx;
}
.left {
  text-align: left;
}
.shareBtn {
  background: #fff;
  font-weight: normal;
  padding-left: 0;
  width: 100%;
  border-bottom: 3rpx dotted #eee;
}
.shareing {
  padding: 20rpx 20rpx 20rpx 0; 
}
.button::after {border: none}
button { background-color: #fff;}
.mychild > button {
  width: 100% !important;
  text-align: left;
  padding-left: 20rpx;
}