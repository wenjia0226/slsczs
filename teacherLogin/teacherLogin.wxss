/* page/myCollection//pages/teacherLogin/teacherLogin.wxss */
.container {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;  
  display: flex;
  flex-direction: column;
  background: #5F0CE6
}
.inputBox {
  width: 100%;
  background: #fff;
}
.login-icon {
  height: 200rpx;
}
.login-img {
  width: 200rpx;
  height: 200rpx;
}
.teacher-login {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 15rpx;
  margin: 20rpx 0;
}
/*表单内容*/
.login-form {
 margin: 20rpx auto; 
 flex: 1;
 width: 80%;
} 
.inputView { 
 background-color: #fff; 
 display: flex; 
 padding: 20rpx;
 align-items: center;
 margin: 30rpx 0;
 box-sizing: border-box;
} 
.loginLab { 
 color: #545454; 
 font-size: 14px;
 margin-right: 15rpx;
 display: flex;
} 
.loginLab image {
  width: 35rpx;
  height: 35rpx;
  margin: 0 10rpx;

}
.inputText {
 flex: 1; 
 font-size: 14px;
 padding: 0 10rpx;
}
.singIn {
  margin: 60rpx 0;
  padding: 20rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  background: #5391FC;
  text-align: center;
}